program sample;

{$APPTYPE CONSOLE}

{$R *.res}


uses
  Horse,
  Horse.GBSwagger,
  System.SysUtils,
  Controller.User in 'Controller.User.pas';

var
  APP: THorse;

begin

  THorse.Use(HorseSwagger);

  Swagger
    .Info
      .Title('Minha API')
      .Description('Documentação da minha API')
      .Contact
        .Name('Ramon Luiz')
        .Email('ramon@email.com')
        .URL('https://www.ramon.com.br')
      .&End
    .&End
    .BasePath('v1')


  THorse.Listen(9000);

end.
